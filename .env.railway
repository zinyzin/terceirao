# Gerado automaticamente pelo plugin PostgreSQL do Railway
# Adicione o plugin: New > Database > PostgreSQL
DATABASE_URL=postgresql://user:password@host:5432/dbname

# Gere com: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_ACCESS_SECRET=GERE_UMA_STRING_ALEATORIA_LONGA_AQUI
JWT_REFRESH_SECRET=GERE_OUTRA_STRING_ALEATORIA_DIFERENTE_AQUI

# URL pública do seu serviço no Railway (ex: https://terceirao-production.up.railway.app)
FRONTEND_URL=https://SEU_SERVICO.up.railway.app

